import pygame

#general setup
pygame.init()

pygame.display.set_caption('Strawberry Patch')
display = pygame.display.set_mode((800, 700))

#clock
clock = pygame.time.Clock()

#import images
bg = pygame.image.load('Images/Background.jpeg').convert_alpha()
ground = pygame.image.load('Images/ground.png').convert_alpha()
player = pygame.image.load('Images/Player.png').convert_alpha()
strawberry = pygame.image.load('Images/Strawberry.png').convert_alpha()

#size of strawberry
strawberry = pygame.transform.scale(strawberry, (40, 40))

#size of player
player = pygame.transform.scale(player, (50, 60))
#create a rectangle around the player
player_rect = player.get_rect(midbottom = (400, 350))

player_gravity = 0

while True:
#event loop
   for event in pygame.event.get():
      #closing the game
      if event.type == pygame.QUIT:
         pygame.quit()
         exit()
      #keyboard input
      if event.type == pygame.KEYDOWN:
         #player can only jump if on ground
         if event.key == pygame.K_SPACE and player_rect.bottom >= ground.top: 
            player_gravity = -20
      
      #Display
      #update surface color
      display.fill('pink')
      #draw the background
      display.blit(bg, (0,0))
      
      #ground platform positions
      display.blit(ground, (30, 600))
      display.blit(ground, (290, 520))
      display.blit(ground, (550, 600)) #moving platform up down
      display.blit(ground, (30, 200)) #moving platform left right
      display.blit(ground, (290, 300))
      display.blit(ground, (550, 100)) #door platform

      #strawberry positions
      display.blit(strawberry, (290, 480))
      
      #increase gravity
      player_gravity += 1
      player_rect.y += player_gravity
      #position of player
      display.blit(player, (player_rect))

      #player keyboard input
      keys = pygame.key.get_pressed()
      if keys[pygame.K_SPACE]:
         player_gravity = -20
      
      pygame.display.update()
      clock.tick(120)
